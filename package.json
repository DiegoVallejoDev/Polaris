{
  "name": "polaris-framework",
  "version": "0.3.0",
  "description": "Multi-agent decision-making framework with MCTS and AI oversight",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "tsc && node dist/test-agents.js",
    "test:philosophy": "ts-node test-philosophy.ts",
    "demo": "ts-node examples/demo.ts",
    "demo:philosophy": "ts-node examples/philosophy-demo.ts",
    "demo:philosophy:specific": "ts-node examples/philosophy-demo.ts specific",
    "demo:philosophy:multiple": "ts-node examples/philosophy-demo.ts multiple",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "ai",
    "mcts",
    "monte-carlo-tree-search",
    "agent-based",
    "decision-making",
    "chess",
    "game-ai",
    "polaris",
    "sentiment-analysis",
    "bias-detection"
  ],
  "author": "Diego Vallejo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DiegoVallejoDev/Polaris.git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^16.6.1",
    "openai": "^6.0.1",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
