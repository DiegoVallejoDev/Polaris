# POLARIS Framework - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ============================================================================
# WEB API AGENTS - Required for LLM integrations
# ============================================================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here (optional)
OPENAI_BASE_URL=https://api.openai.com/v1 (optional, for custom endpoints)

# Anthropic Claude API Configuration  
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_BASE_URL=https://api.anthropic.com (optional, for custom endpoints)

# Google Gemini API Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_API_PROJECT=project_id_here
GOOGLE_BASE_URL=https://generativelanguage.googleapis.com (optional)

# ============================================================================
# LOCAL AI MODELS - For privacy-focused deployments
# ============================================================================

# Ollama Configuration (for local models)
# Install Ollama from: https://ollama.ai/
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2 (or your preferred local model)

# ============================================================================
# POLARIS FRAMEWORK CONFIGURATION
# ============================================================================

# General Framework Settings
POLARIS_LOG_LEVEL=info
POLARIS_MAX_MEMORY=512MB
POLARIS_DEFAULT_TIMEOUT=30000

# Search Configuration Defaults
POLARIS_MAX_DEPTH=10
POLARIS_SIMULATIONS_PER_NODE=100
POLARIS_EXPLORATION_CONSTANT=1.414
POLARIS_TIME_LIMIT=5000

# Sentinel Agent Configuration
POLARIS_DIVERSITY_THRESHOLD=0.3
POLARIS_BIAS_DETECTION=true
POLARIS_CORRECTION_STRENGTH=0.5
POLARIS_INTERVENTION_THRESHOLD=0.6

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Development Mode Settings
NODE_ENV=development
DEBUG=polaris:*

# Testing Configuration
TEST_TIMEOUT=10000
TEST_API_CALLS=false (set to true to test real API calls)

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=3001

# ============================================================================
# CHESS DEMO CONFIGURATION (for upcoming chess implementation)
# ============================================================================

# Chess Engine Settings
CHESS_TIME_CONTROL=5+3 (5 minutes + 3 second increment)
CHESS_OPENING_BOOK=true
CHESS_ENDGAME_TABLEBASE=false

# Demo Configuration
DEMO_AUTO_PLAY=false
DEMO_ANALYSIS_DEPTH=15
DEMO_SHOW_THINKING=true

# ============================================================================
# SECURITY & RATE LIMITING
# ============================================================================

# API Rate Limiting (requests per minute)
OPENAI_RATE_LIMIT=60
ANTHROPIC_RATE_LIMIT=50
GOOGLE_RATE_LIMIT=60
OLLAMA_RATE_LIMIT=1000

# Request Timeouts (milliseconds)
API_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# ============================================================================
# ADVANCED FEATURES (for future implementations)
# ============================================================================

# Multi-Agent Simulation
ENABLE_PARALLEL_AGENTS=true
MAX_CONCURRENT_AGENTS=5

# Learning & Adaptation
ENABLE_AGENT_LEARNING=false
LEARNING_RATE=0.01
EXPERIENCE_BUFFER_SIZE=1000

# Experimental Features
ENABLE_QUANTUM_AGENTS=false
ENABLE_NEUROMORPHIC_AGENTS=false
ENABLE_HYBRID_REASONING=true